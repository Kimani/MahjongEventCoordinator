<Window 
    x:Class="MahjongEventCoordinator.PlayerNameDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="AddPlayerDialog"
    Width="400"
    Height="145">
    <StackPanel Margin="8">
        <TextBlock
            Margin="0,0,0,8"
            Text="Player Name" />
        <TextBox
            x:Name="NameTextBox"
            TextChanged="OnTextBoxTextChanged"
            VerticalContentAlignment="Center"
            Height="28" />

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            
            <Button
                x:Name="OkButton"
                Margin="0,8,4,0"
                Height="30"
                Click="OnOKClicked"
                IsEnabled="false"
                Content="OK" />
            <Button
                Margin="4,8,0,0"
                Height="30"
                Click="OnCancelClicked"
                Content="Cancel"
                Grid.Column="1" />
        </Grid>
    </StackPanel>
</Window>
